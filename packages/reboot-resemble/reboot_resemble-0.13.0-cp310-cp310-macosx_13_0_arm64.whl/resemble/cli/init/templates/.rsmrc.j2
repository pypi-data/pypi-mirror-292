# Find '.proto' files in '{{ api_directory }}'.
protoc {{ api_directory }}

# Put boilerplate files in 'boilerplate/'.
protoc --boilerplate=boilerplate/

# Specify output folder for generated code for Python backend{{ ' and React frontend.' if web_directory else '.' }}
protoc --python={{ backend_directory }}/{{ api_directory }}{% if web_directory %}
protoc --react={{ web_directory }}/{{ api_directory }}{% endif %}

# Watch if any generated or source files are modified.
dev run --watch={{ backend_directory }}/{{ api_directory }}/**/*.py
dev run --watch={{ backend_src_directory }}/**/*.py
dev run --protoc-watch

# Tell `rsm` that this is a Python application.
dev run --python

# Save state between restarts.
dev run --name={{ name }}

# When expunging, expunge that state we've saved.
dev expunge --name={{ name }}

# Run the application!
dev run backend/src/main.py

