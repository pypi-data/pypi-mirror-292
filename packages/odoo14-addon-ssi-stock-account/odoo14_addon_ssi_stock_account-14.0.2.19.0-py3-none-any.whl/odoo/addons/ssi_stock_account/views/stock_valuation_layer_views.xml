<odoo>
<record id="stock_valuation_layer_view_tree" model="ir.ui.view">
    <field name="name">stock.valuation.layer - tree</field>
    <field name="model">stock.valuation.layer</field>
    <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='create_date']" position="before">
                <header>
                    <button
                            name="action_create_accounting_entry"
                            type="object"
                            string="Create Accounting Entry"
                            class="oe_highlight"
                        />
                    <button
                            name="action_delete_accounting_entry"
                            type="object"
                            string="Delete Accounting Entry"
                            class="oe_highlight"
                        />
                </header>
            </xpath>
            <xpath expr="//field[@name='quantity']" position="attributes">
                <attribute name="sum">Total Quantity</attribute>
            </xpath>
            <xpath expr="//field[@name='value']" position="after">
                <field name="usage_quantity" sum="Total Usage Quantity" />
                <field name="usage_value" sum="Total Usage Value" />
                <field name="incoming_usage_quantity" sum="Incoming Usage Quantity" />
                <field name="incoming_usage_value" sum="Incoming Usage Value" />
            </xpath>

        </data>
    </field>
</record>


<record id="stock_valuation_layer_view_form" model="ir.ui.view">
    <field name="name">stock.valuation.layer - form</field>
    <field name="model">stock.valuation.layer</field>
    <field name="inherit_id" ref="stock_account.stock_valuation_layer_form" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//form" position="attributes">
                <attribute name="edit">1</attribute>
            </xpath>
            <xpath expr="//sheet" position="before">
                <header>
                    <button
                            name="action_create_accounting_entry"
                            type="object"
                            string="Create Accounting Entry"
                            class="oe_highlight"
                            attrs="{'invisible':[('account_move_id','!=',False)]}"
                        />
                    <button
                            name="action_delete_accounting_entry"
                            type="object"
                            string="Delete Accounting Entry"
                            class="oe_highlight"
                            attrs="{'invisible':[('account_move_id','=',False)]}"
                        />
                </header>
            </xpath>
            <xpath expr="//field[@name='account_move_id']" position="after">
                <field name="date" />
                <field name="debit_account_id" />
                <field name="credit_account_id" />
                <field name="analytic_account_id" />
                <field name="journal_id" />
                <field name="account_move_id" />
                <field name="account_move_date" />
                <field name="date_is_equal" />
                <field name="debit_move_line_id" />
                <field name="credit_move_line_id" />
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="usage" string="Usage">
                    <group name="usage_1" colspan="4" col="2">
                        <group name="usage_1_1" string="Usage" colspan="1" col="2">
                            <field name="usage_quantity" string="Qty" />
                            <field name="usage_value" string="Value" />
                            <field name="usage_quantity_diff" string="Qty Diff" />
                        </group>
                        <group name="usage_1_2" string="Incoming" colspan="1" col="2">
                            <field name="incoming_usage_quantity" string="Qty" />
                            <field name="incoming_usage_value" string="Value" />
                            <field
                                    name="incoming_usage_quantity_diff"
                                    string="Qty Diff"
                                />
                        </group>
                    </group>
                    <field name="usage_ids">
                        <tree>
                            <field name="dest_stock_valuation_layer_id" />
                            <field name="quantity" />
                            <field name="value" />
                        </tree>
                        <form>
                            <group name="usage_form" colspan="4" col="2">
                                <field name="dest_stock_valuation_layer_id" />
                                <field name="quantity" />
                                <field name="value" />
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </data>
    </field>
</record>



</odoo>
